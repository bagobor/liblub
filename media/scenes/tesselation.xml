<?xml version="1.0" encoding="UTF-8"?>
<liblub>
	<Programs>
		<Program name="Tesselator">
			<Shader url="Tesselation/terrain.vert" type="VERTEX_SHADER" />
			<!--<Shader url="Tesselation/terrain.cont" type="CONTROL_SHADER" />
			<Shader url="Tesselation/terrain.eval" type="EVALUATION_SHADER" /> !-->
			<Shader url="Tesselation/terrain.frag" type="FRAGMENT_SHADER" /> 
			<Uniform value="1920, 1200" name="screen_size" />
		</Program>
	</Programs>
	<Textures>
		<Texture name="mars" url="Planets/Mars.jpg" />
		<Texture name="noise" url="terrain-noise.png" />
	</Textures>
	<Materials>
		<Material name="Terrain" program="Tesselator">
			<Layer sampler="terrain" texture="noise" />
			<Layer sampler="diffuse" texture="mars" />
		</Material>
	</Materials>
	<Scene name="Tesselator (YAY)">
		<Light position ="0.3, 6.6, -3.3" direction="1,-5,-1" />
		<Object name="monkey" mesh="tess.obj" material="Terrain" scale="10.0" position="10, 0, -10" />
	</Scene>
</liblub>
