<?xml version="1.0" encoding="UTF-8"?>
<liblub>
	<Programs>
		<Program name="Ubershader">
			<Shader url="Color/PhongColor" 
				flags="receiveShadows,
						useDiffuseTexture,
						useSpotLight,
						usePCF,
						useAmbientTexture,
						useNormalTexture"
			/>
			<Uniform value="0.1, 0.1, 0.1, 1.0" name="ambientSceneColor" />
			<Uniform value="0.1, 0.1, 0.1, 1.0" name="diffuseMaterialColor" />
			<Uniform value="0.8, 0.8, 0.8,1.0" name="specularMaterialColor" />
			<Uniform value="4.3" name="shininess" />
		</Program>
		
		<Program name="Ocean">
			<Shader url="Water/Ocean" />
			
			<Uniform name="deepColor" value="0, 0.3, 0.5, 1.0" />
			<Uniform name="shallowColor" value="0, 1, 1, 1.0" />
			<Uniform name="reflectionColor" value="0.95, 1, 1, 1.0" />
			
			<Uniform name="reflectionAmount" value="1.0" />
			<Uniform name="reflectionBlur" value="0.0" />
			<Uniform name="waterAmount" value="0.3" />
			<Uniform name="fresnelPower" value="5.0" />
			<Uniform name="fresnelBias" value="0.328" />
			<Uniform name="hdrMultiplier" value="0.471" />
			
			<Uniform name="textureScale" value="25, 26" />
			<Uniform name="bumpSpeed" value="0.015, 0.005" />
			
			<Uniform name="eyePosition" value="0.5, 0.5, 0.5" />
			
			<Uniform name="BumpScale" value="0.2" />
			<Uniform name="time" value="0.7" />
			<Uniform name="waveFreq" value="0.028" />
			<Uniform name="waveAmp" value="1.8" />
		</Program>
		
		<Program name="Texture">
			<Shader url="Texture/texture" />
		</Program>
		
	</Programs>
	<Textures>
		<Texture name="Mars" url="Planets/Mars.jpg" />
		<Texture name="plane-occlusion" url="plane-occlusion.png" />
		<Texture name="Mars-normal" url="Planets/Mars-normal.png" />
		<Texture name="TychoSkymap" url="Planets/TychoSkymap.jpg" />
		<Texture name="waves" url="ocean/waves2.dds" />
		<TextureCube name="morning" url="cubemaps/morning" />
	</Textures>
	<Materials>
		<Material name="Mars" program="Ubershader">
			<Layer sampler="diffuseTexture" texture="Mars" />
			<Layer sampler="ambientTexture" texture="plane-occlusion" />
			<Layer sampler="normalTexture" texture="Mars-normal" />
		</Material>
		<Material name="Ocean" program="Ocean">
			<Layer sampler="EnvironmentMap" texture="morning" />
			<Layer sampler="NormalMap" texture="waves" />
		</Material>
		<Material name="universedome" program="Texture">
			<Layer sampler="myTexture" texture="TychoSkymap" />
		</Material>
	</Materials>
	<Meshes>
		<File name="sphere" url="earth.obj" />
	</Meshes>
	<Scene name="XML Loader">
		<Light position ="-15.2, 19.4, 6.5" direction="1,-5,-1" />
		<Object name="mars" mesh="sphere" material="Mars" scale="10" position="-10,-10,-10" />
		<Object name="waterplanet" mesh="sphere" material="Ocean" scale="1" position="-10,5,.05" />
		<Object name="skydome" mesh="sphere" material="universedome" scale="800" position="0, 0,0" />
	</Scene>
</liblub>
