<?xml version="1.0" encoding="UTF-8"?>
<liblub>
	<Programs>
		<Program name="Ubershader">
			<Shader url="Color/PhongColor" />
			<flags>
					receiveShadows,
					useDiffuseTexture,
					useSpotLight,
					usePCF,
					useAmbientTexture,
					useNormalTexture
			</flags>
			<uniform value="0.1, 0.1, 0.1, 1.0" name="ambientSceneColor" />
			<uniform value="0.1, 0.1, 0.1, 1.0" name="diffuseMaterialColor" />
			<uniform value="0.8, 0.8, 0.8,1.0" name="specularMaterialColor" />
			<uniform value="4.3" name="shininess" />
		</Program>
	</Programs>
	<Materials>
		<Material name="Monkey" shader="Ubershader">
			<Texture name="diffuseTexture" url="bump/masonry-wall-texture.jpg" />
			<Texture name="ambientTexture" url="monkey-occlusion.png" />
			<Texture name="normalTexture" url="bump/masonry-wall-normal-map.jpg" />
		</Material>
	</Materials>
	<Scene name="XML Loader">
		<Light position ="0.3, 6.6, -3.3" direction="1,-5,-1" />
		<Object name="monkey" mesh="monkey.blend" material="Color/white" scale="2.0" position="10, 0, -10" />
		<Object name="radio" mesh="radio.blend" material="Color/white" scale="0.5" position="-5, -5, -5" />
		<Procedural name="menger sponge" type="Sponge" recursion="3" material="Particle/stars" scale="3.0" position="10, 0, -10" />
		<Procedural name="stars" type="Stars" recursion="3" material="Particle/stars" scale="3.0" position="10, 0, -10" resolution="100" density="1" randomness="0" colorIntensity="1" />
		    <MeshPlane size="10" step="3" mesh="monkey.blend" texture="Paper_Texture_by_Spiteful_Pie_Stock.jpg">
	</Scene>
</liblub>
